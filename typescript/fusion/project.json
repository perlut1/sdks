{
  "name": "fusion",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "typescript/fusion/src",
  "projectType": "library",
  "tags": ["typescript", "sdk"],
  "targets": {
    "build": {
      "executor": "@nx/js:tsc",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "typescript/fusion/dist",
        "main": "typescript/fusion/src/index.ts",
        "tsConfig": "typescript/fusion/tsconfig.lib.json",
        "assets": ["typescript/fusion/*.md"]
      }
    },
    "test": {
      "executor": "@nx/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "typescript/fusion/jest.config.ts",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nx/eslint:lint",
      "options": {
        "lintFilePatterns": ["typescript/fusion/**/*.ts"]
      },
      "outputs": ["{options.outputFile}"]
    },
    "type-check": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsc --noEmit -p typescript/fusion/tsconfig.lib.json"
      }
    }
  }
}